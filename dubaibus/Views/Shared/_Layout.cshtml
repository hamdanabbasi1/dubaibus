<!DOCTYPE html>
<html>
<head>

    <title>@ViewData["Title"] - Luxury Art Passenger Transport</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/images/luxury_UNN_icon.ico" />

    <link rel="icon" href="~/images/logotop.png" />
    @* ***Meta Tags*** *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Travel anywhare within dubai, an efficient bus transport system within dubai. Online bus booking, luxuary buses. Buses Dubai, dubai buses to sharjah" />
    <meta name="keywords" content="Best Tranport in dubai, Online bus booking,travel within dubai, luxuary dubai buses" />
    <meta name="author" content="Luxury art passenger, transport in dubai designed and developed by Fawad https://www.upwork.com/fl/fawadbintariq" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    @* ***/Meta Tags*** *@
    @* ***StyleSheets***  *@
    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700%7CVarela+Round" rel="stylesheet" />
    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/Content/bootstrap.min.css" />

    <!-- Owl Carousel -->
    <link type="text/css" rel="stylesheet" href="~/Content/owl.carousel.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/owl.theme.default.css" />

    <!-- Magnific Popup -->
    <link type="text/css" rel="stylesheet" href="~/Content/magnific-popup.css" />

    <!-- Font Awesome Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" />

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/Content/style.css" />

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @* ***/Stylesheets*** *@
</head>
<body>
    <!-- Header -->
    <header id="home">
        <!-- Background Image -->
        @*<div class="bg-img index-background">
                <div class="overlay"></div>
            </div>*@
        <video autoplay muted loop id="myVideo">
            <source src="~/images/dubaibuses.mp4" type="video/mp4">
            Your browser does not support HTML5 video.
        </video>
        <!-- /Background Image -->
        <!-- Nav -->
        <nav id="nav" class="navbar nav-transparent">
            <div class="container">
                <div class="navbar-header">
                    <!-- Logo -->
                    <a href="/">
                        <div class="navbar-brand">
                                <img class="logo" src="~/images/luxury.png" alt="logo">
                                <img class="logo-alt" src="~/images/luxury.png" alt="logo">
                        </div>
                    </a>
                    <!-- /Logo -->
                    <!-- Collapse nav button -->
                    <div class="nav-collapse">
                        <span></span>
                    </div>
                    <!-- /Collapse nav button -->
                </div>
                <!--  Main navigation  -->
                <ul class="main-nav nav navbar-nav navbar-right">
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Home" ? "active" : "")"><a href="/">Home</a></li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "AboutUs" ? "active" : "")"><a href="/AboutUs">About</a></li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Services" ? "active" : "")"><a href="/Services">Services</a></li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Offers" ? "active" : "")"><a href="/Offers">Offers</a></li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Partners" ? "active" : "")"><a href="/Partners">Partners</a></li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "ContactUs" ? "active" : "")"><a href="/ContactUs">Contact</a></li>
                </ul>
                <!-- /Main navigation -->
                @*@await Html.PartialAsync("_LoginPartial")*@
                <!-- /Main navigation -->

            </div>
        </nav>
        <!-- /Nav -->
        <!-- home wrapper -->
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="home-wrapper">
            <div class="container">
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <br />
                <div class="row">
                    <!-- home content -->
                    <div class="col-md-7 col-sm-6 col-xs-12">
                        <div class="home-content">
                            <h1 class="white-text">Luxury Art Passenger Transport</h1>
                            <p class="white-text">
                                Come Travel with us!!
                            </p>
                            <a href="/AboutUs" class="white-btn btn-scrol">Learn more</a>
                            <!-- <button class="main-btn">Register</button> -->
                        </div>
                    </div>
                    <!--RIght Login-->
                    <br />
                    <br />
                    <br />
                    <br />
                    <br />


                    <div class="col-md-5 col-sm-6 hidden-xs custom-sm-push-1">
                        <div class="jumbotron white-background index-sign-div">
                            <form class="contact-form" method="post" action="/Home/Booking">
                                <h3 style="color:dimgray;">Book Transport</h3>
                                <label class="signup-label">Name</label>
                                <br />
                                <input type="text" class="input" name="name" placeholder="Full Name" />
                                <br />
                                <label class="signup-label">Email</label>
                                <br />
                                <input type="email" name="mail" class="input" placeholder="you@example.com" />
                                <br />
                                <label class="signup-label">Phone#</label>
                                <input type="text" name="phone" class="input" placeholder="Phone#" />
                                <label class="signup-label">Booking Date</label>
                                <input type="date" name="bookdate" class="input" placeholder="Booking date" />
                                <label class="signup-label">Select Transport</label>
                                <select name="bus" class="form-control" style="background-color: #edeeef">
                                    <option>SELECT YOUR TRANSPORT</option>
                                    <option value="15 Seat Toyota Hiroof Model 201">15 Seat Toyota Hiroof Model 2016</option>">
                                    <option value="15 Seat Toyota Hiroof Model 201">15 Seat Toyota Hiroof Model 2016</option>
                                    <option value="30 Seat Coaster Model 2016">30 Seat Coaster Model 2016</option>
                                    <option value="35 Seat Luxury King Long Bus">35 Seat Luxury King Long Bus</option>
                                    <option value="50 Seat King Long Luxury Bus">50 Seat King Long Luxury Bus</option>

                                </select>
                                <label class="signup-label">Booking Details</label>
                                <textarea name="description" class="input" placeholder="Enter Details here..."></textarea>
                                <button class="main-btn btn-block blue-g-btn" onclick="alert('Thank you For Your Booking. Soon You will  Recieve Confirmation Email!');">
                                    <b>Book Now</b>
                                </button>

                            </form>
                        </div>
                    </div>
                    <!--/Right Login-->
                    <!-- /home content -->

                </div>
            </div>
        </div>
        <!-- /home wrapper -->

    </header>
    <!-- /Header -->

    @RenderBody()
    <!-- Footer -->
    <footer id="footer" class="sm-padding bg-dark">

        <!-- Container -->
        <div class="container">

            <!-- Row -->
            <div class="row">


                <div class="col-md-push-4 col-md-4 col-xs-12">

                    <div class="center">
                        <a href="/">
                            <img style="height:70px;" src="~/images/luxury.png" alt="">
                        </a>
                    </div>

                    <!-- footer copyright -->
                    <div class="footer-copyright">
                        <p>
                            Copyright©2018|All Rights Reserved.

                        </p>

                        <p>Designed by Custians</p>
                    </div>
                    <!-- /footer copyright -->

                </div>



            </div>
            <!-- /Row -->

        </div>
        <!-- /Container -->

    </footer>
    <!-- /Footer -->

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        @*<script src="~/js/jquery.min.js"></script>*@
        <script src="~/js/owl.carousel.min.js"></script>
        <script src="~/js/jquery.magnific-popup.js"></script>
        <script src="~/js/main.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/owl.carousel.min.js"></script>
        <script src="~/js/jquery.magnific-popup.js"></script>
        <script src="~/js/main.js"></script>
    </environment>
    <script type="text/javascript">
        var today = new Date().toISOString().split('T')[0];
        document.getElementsByName("bookdate")[0].setAttribute('min', today);
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
